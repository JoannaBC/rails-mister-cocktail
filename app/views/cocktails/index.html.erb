<h1>Cocktails</h1>

<table class="table table-stripped">
  <thead>
    <tr>
      <th>Cocktails</th>
      <th>Ingredients</th>
      <th>Doses</th>
    </tr>
  </thead>

  <tbody>
    <% @cocktails.each do |cocktail| %>
      <tr>
        <td><%= cocktail.name %></td>
        <td><%= cocktail.ingredients %></td>
        <td>
          <% cocktail.doses.each do |dose| %>
            <%= dose.description %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cocktail', new_cocktail_path %>
